// helper para normalizar resultados (siempre devolver array de filas)
function normalizeResults(raw: any): any[] {
  if (!raw) return [];
  if (Array.isArray(raw)) {
    if (raw.length === 0) return [];
    if (Array.isArray(raw[0])) return raw[0];
    return raw as any[];
  }
  return [raw];
}
